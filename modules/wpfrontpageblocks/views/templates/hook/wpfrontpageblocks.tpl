{if $wpfrontpageblocks.blocks}    <div id="wpfrontpageblocks" class="row parent">        {if ($wpfrontpageblocks.mainTitle != '')}            <div class="row">                <div class="column col-12-12 title-1">                    {$wpfrontpageblocks.mainTitle}                </div>            </div>        {/if}        <div class="row">            <div class="column col-12-12">                <ul class="grid grid-{$wpfrontpageblocks.columnCount}">                    {foreach $wpfrontpageblocks.blocks as $block}                        {if ($block->image != '')}                            <li class="wpfrontpageblock item white-border-3px">                                {if (isset($block->link) && $block->link != '')}                                    <a class="hover-container" href="{$block->link}" {if $block->open_in_new}target="_blank"{/if} title="{$block->title}">                                {else}                                    <div class="hover-container">                                {/if}                                    {if ($wpfrontpageblocks.hover)}                                        <div class="hover">                                            <div class="title">{$block->title}</div>                                            {if ($block->description != '')}<div class="description">{$block->description}</div>{/if}                                        </div>                                    {/if}                                    <img src="{$block->image}" alt="{$block->title}"/>                                {if (isset($block->link) && $block->link != '')}                                    </a>                                {else}                                    </div>                                {/if}                            </li>                        {/if}                    {/foreach}                </ul>            </div>        </div>    </div>{/if}